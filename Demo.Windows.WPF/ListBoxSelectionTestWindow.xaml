<Window x:Class="Demo.Windows.WPF.ListBoxSelectionTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:Demo.Windows.WPF"
        xmlns:behaviors="clr-namespace:Theme.Behaviors;assembly=Theme"
        mc:Ignorable="d" Background="{DynamicResource BRUSH_BLACK}"
        Title="ListBoxSelectionTestWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBoxItems" SelectionMode="Multiple" Background="{DynamicResource BRUSH_BLACK}">
            <i:Interaction.Behaviors>
                <behaviors:UniversalSelectionBehavior IsEnabled="True" ClearOnEmptyClick="True" ClosePopupsOnEmptyClick="True" EnableCtrlASelectAll="True" 
                                                          KeepSelectionOnRightClick="True" KeepEventBubledOnRightClickUp="True" AutoFocus="True"
                                                          SelectionBrush="#1A00CCCC" SelectionBorderBrush="#FF00CCCC"
                                                          SelectionRectangleStyle="{StaticResource DefaultSelectionRectangleStyle}"
                                                          SelectionStartedCommand="{Binding Path=SelectionStartedCommand}"
                                                          SelectionCompletedCommand="{Binding Path=SelectionCompletedCommand}"
                                                          SelectionRectChangedCommand="{Binding Path=SelectionChangedCommand}" />
            </i:Interaction.Behaviors>
            <ListBoxItem Content="Item 1" />
            <ListBoxItem Content="Item 2" />
            <ListBoxItem Content="Item 3" />
            <ListBoxItem Content="Item 4" />
            <ListBoxItem Content="Item 5" />
            <ListBoxItem Content="Item 6" />
            <ListBoxItem Content="Item 7" />
            <ListBoxItem Content="Item 8" />
            <ListBoxItem Content="Item 9" />
            <ListBoxItem Content="Item 10" />
        </ListBox>
    </Grid>
</Window>

<customControl:BaseWindow x:Class="Demo.Windows.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.Windows.WPF"
        xmlns:customControl="clr-namespace:Theme.CustomControl;assembly=Theme"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded" Background="{DynamicResource BRUSH_BLACK}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <Button x:Name="btnShare" Content="Share" Click="btnShare_Click" />
            <Button x:Name="btnUri" Content="Uri panel" Click="btnUri_Click" />
        </WrapPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Background="Red">
            <TextBlock  Text="Bottom" />
        </StackPanel>

    </Grid>

</customControl:BaseWindow>

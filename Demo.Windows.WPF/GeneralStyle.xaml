<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Img="clr-namespace:System.Windows.Media.Imaging;assembly=PresentationCore"
                    xmlns:mscorlib="clr-namespace:System;assembly=mscorlib">
    <mscorlib:String x:Key="IMG_STRING_DEMO_LOADING" >pack://application:,,,/Demo.Windows.WPF;Component/Resources/Images/Indicator_small.jpg</mscorlib:String>
    
    <Img:BitmapImage x:Key="IMG_DEMO_LOADING" UriSource="pack://application:,,,/Demo.Windows.WPF;Component/Resources/Images/Indicator_small.jpg" />

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Width" Value="Auto" />
    </Style>

</ResourceDictionary>